generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  ADMIN
  CLIENT
  RESTAURANT
}

model users {
  id       String @unique @default(uuid())
  name     String
  email    String @unique
  password String
  role     ROLE   @default(CLIENT)

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  snacks   snacks[]
  favorite favorites[]
}

model snacks {
  id          String   @unique @default(uuid())
  title       String
  description String
  imageUrl    String
  category    String
  ingredients String[]
  price       Float

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  user   users  @relation(fields: [userId], references: [id])
  userId String

  favorite favorites[]
}

model favorites {
  id String @unique @default(uuid())

  user   users  @relation(fields: [userId], references: [id])
  userId String

  snack   snacks @relation(fields: [snackId], references: [id])
  snackId String
}
