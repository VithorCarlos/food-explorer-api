generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

enum ROLE {
  ADMIN
  CLIENT
  RESTAURANT
}

enum ATTACHMENT_STATUS {
  PENDING
  LINKED
  EXPIRED
}

enum RESOURSE_TYPE {
  USER
  SNACK
}

model User {
  id       String @unique @default(uuid())
  name     String
  email    String @unique
  password String
  role     ROLE   @default(CLIENT)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  snacks       Snack[]
  favorite     Favorite[]
  refreshToken RefreshToken?

  @@map("users")
}

model Snack {
  id          String   @unique @default(uuid())
  title       String
  description String?
  category    String
  ingredients String[]
  price       Float

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  favorite Favorite[]

  @@map("snacks")
}

model Favorite {
  id String @unique @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  snack   Snack  @relation(fields: [snackId], references: [id], onDelete: Cascade)
  snackId String @map("snack_id")

  @@map("favorites")
}

model RefreshToken {
  id     String @unique @default(uuid())
  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresIn Int @map("expires_in")

  @@map("refresh_tokens")
}

model Attachment {
  id        String    @unique @default(uuid())
  title     String
  url       String
  createdAt DateTime  @default(now()) @map("created_at")
  expiresAt DateTime? @map("expires_at")

  status ATTACHMENT_STATUS @default(PENDING)

  links AttachmentLink[]

  @@map("attachment")
}

model AttachmentLink {
  id           String        @unique @default(uuid())
  attachmentId String        @map("attachment_id")
  resourceId   String        @map("resource_id")
  resourceType RESOURSE_TYPE @map("resource_type")
  linkedAt     DateTime      @default(now()) @map("linked_at")

  attachment Attachment @relation(fields: [attachmentId], references: [id], onDelete: Cascade)

  @@unique([attachmentId, resourceId, resourceType])
  @@index([resourceId, resourceType], name: "idx_resource")
  @@map("attachment_link")
}
