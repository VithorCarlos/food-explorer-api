generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

enum ROLE {
  ADMIN
  CLIENT
}

enum PRODUCT_CATEGORIES {
  SWEETS_AND_CAKES
  ARABIC
  ACAI
  BRAZILIAN
  CHINESE
  SAVORY_SNACKS
  ICE_CREAM
  PIZZA
  PASTRY
  ITALIAN
  APPETIZERS
  BAKERIES
  HEALTHY
  SNACKS
  MEAL_BOX
  GOURMET
  VEGETARIAN
  JAPANESE
  MEATS
  DRINKS
}

enum ORDER_STATUS {
  DRAFT
  PENDING
  PAID
  PREPARING
  DELIVERED
  CANCELLED
}

enum PAYMENT_STATUS {
  PENDING
  APPROVED
  REFUSED
  CANCELLED
  REFUNDED
}

enum PRODUCT_STATUS {
  ACTIVE
  PAUSED
}

enum RESOURSE_TYPE {
  USER
  PRODUCT
}

enum PAYMENT_METHOD {
  PIX
  CREDIT_CARD
  DEBIT_CARD
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     ROLE   @default(CLIENT)

  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @default(now()) @updatedAt @map("updated_at")
  deletedAt             DateTime? @map("deleted_at")
  deletionRequestedAt   DateTime? @map("deletion_requested_at")
  hardDeleteScheduledAt DateTime? @map("hard_delete_scheduled_at")

  products        Product[]
  favorite        Favorite[]
  refreshToken    RefreshToken?
  orders          Order[]
  userAttachments UserAttachment[]

  @@map("users")
}

model Product {
  id          String             @id @default(uuid())
  title       String
  description String?
  category    PRODUCT_CATEGORIES
  ingredients String[]
  price       Decimal            @db.Decimal(10, 2)
  status      PRODUCT_STATUS     @default(ACTIVE)

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Restrict)
  userId String @map("user_id")

  favorite           Favorite[]
  orderItems         OrderItem[]
  productAttachments ProductAttachment[]

  @@map("products")
}

model Order {
  id          String       @id @default(uuid())
  status      ORDER_STATUS @default(DRAFT)
  totalAmount Decimal      @map("total_amount") @db.Decimal(10, 2)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  user       User        @relation(fields: [userId], references: [id], onDelete: Restrict)
  userId     String      @map("user_id")
  orderItems OrderItem[]

  payments Payment[]

  @@map("orders")
}

model OrderItem {
  id       String  @id @default(uuid())
  title    String
  price    Decimal @db.Decimal(10, 2)
  subtotal Decimal @db.Decimal(10, 2)
  quantity Int

  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId String @map("order_id")

  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  productId String  @map("product_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("order_items")
}

model Payment {
  id               String  @id @default(uuid())
  gatewayPaymentId String? @unique @map("gateway_payment_id")

  method    PAYMENT_METHOD
  status    PAYMENT_STATUS @default(PENDING)
  amount    Decimal        @db.Decimal(10, 2)
  gateway   String
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @default(now()) @updatedAt @map("updated_at")

  order               Order                @relation(fields: [orderId], references: [id], onDelete: Restrict)
  orderId             String               @map("order_id")
  paymentTransactions PaymentTransaction[]

  @@map("payments")
}

model PaymentTransaction {
  id                   String         @id @default(uuid())
  gateway              String
  gatewayTransactionId String         @unique @map("gateway_transaction_id")
  eventType            String         @map("event_type")
  status               PAYMENT_STATUS @default(PENDING)

  responsePayload Json @map("response_payload")

  payment   Payment @relation(fields: [paymentId], references: [id], onDelete: Restrict)
  paymentId String  @map("payment_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("payment_transactions")
}

model Favorite {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String  @map("product_id")

  @@unique([userId, productId])
  @@map("favorites")
}

model RefreshToken {
  id     String @id @default(uuid())
  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresIn Int @map("expires_in")

  @@map("refresh_tokens")
}

model Attachment {
  id    String @id @default(uuid())
  title String
  url   String

  createdAt          DateTime            @default(now()) @map("created_at")
  productAttachments ProductAttachment[]
  userAttachments    UserAttachment[]

  @@map("attachments")
}

model ProductAttachment {
  id String @id @default(uuid())

  isMain   Boolean @default(false) @map("is_main")
  position Int     @default(0)

  attachment   Attachment @relation(fields: [attachmentId], references: [id], onDelete: Cascade)
  attachmentId String     @map("attachment_id")

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String  @map("product_id")

  @@unique([attachmentId, productId])
  @@map("product_attachments")
}

model UserAttachment {
  id String @id @default(uuid())

  attachment   Attachment @relation(fields: [attachmentId], references: [id], onDelete: Cascade)
  attachmentId String     @map("attachment_id")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  @@unique([attachmentId, userId])
  @@map("user_attachments")
}
